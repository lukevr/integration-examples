{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es2016",
    "typeRoots" : [ "./node_modules/@types", "./node_modules/indy-sdk-types/" ]
  },
  "include": [
    "src/**/*.ts",
    "dist/dto/VerifyProofForActionReplyDTO.d.ts"
  ]
}
